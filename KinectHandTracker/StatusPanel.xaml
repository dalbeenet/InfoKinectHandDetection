<UserControl x:Class="KinectHandTracker.StatusPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KinectHandTracker"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="150">
    <Grid x:Name="MainGrid" Background="Black">
        <StackPanel>
            <Label Content="Left Hand" Background="#FF191919" Foreground="White" FontSize="14.667"></Label>
            <Image x:Name="LeftHandView" Width="150" Height="150"></Image>
            <Button x:Name="BtnLHandSave" Content="Save" Click="BtnLHandSave_OnClick"/>
            <Label Content="Right Hand" Background="#FF191919" Foreground="White" FontSize="14.667"></Label>
            <Image x:Name="RightHandView" Width="150" Height="150"></Image>
            <Button x:Name="BtnRHandSave" Content="Save" Click="BtnRHandSave_OnClick"/>
            <Label Content="Class" Background="#FF191919" Foreground="White" FontSize="14.667"></Label>
            <TextBox x:Name="FormClassName" Height="23" TextWrapping="Wrap" Text="Default"/>
        </StackPanel>
    </Grid>
</UserControl>
